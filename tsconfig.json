{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": false,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "voby",
        "incremental": true,
        "declaration": true,
        "declarationDir": "./dist",
        "stripInternal": true,
        "outDir": "./dist",
        "typeRoots": [
            "voby/dist/types"
        ]
    },
    "include": [
        "./lib/**/*.ts*"
    ]
}